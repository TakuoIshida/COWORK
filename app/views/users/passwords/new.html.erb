<h1><%= t('.forgot_your_password') %></h1>
<div align="center">

<%= form_for(resource, as: resource_name, url: user_password_path, html: { method: :post }) do |f| %>
  <div class="form-group">
    <%= f.label :email %>
    <%= f.email_field :email, autofocus: true, autocomplete: 'email', class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.submit t('.send_me_reset_password_instructions'), class: 'btn btn-primary', data: {disable_with: "Now_Loading..."}  %>
  </div>
<% end %>

<%= render 'devise/shared/links' %>
</div>
