commands:
  upgrade-aws-cli:
    command: |
      pip install awscli --upgrade --user
  set-instance-credit-unlimited:
    command: |
      aws ec2 modify-instance-credit-specification --region ap-northeast-1 --instance-type t2.medium --instance-credit-specification '[{"InstanceId": "i-0029191ef5c6feba0" $(wget -q -O - http://169.254.169.254/latest/meta-data/instance-id)"i-0029191ef5c6feba0","CpuCredits": "unlimited"}]'
  