commands:
  upgrade-aws-cli:
    command: |
      pip install awscli --upgrade --user
  set-instance-credit-unlimited:
    command: |
      aws ec2 modify-instance-credit-specification --region ap-northeast-1 --instance-credit-specification '[{"InstanceId": "i-0a955ddbb13a87ff6", "CpuCredits": "unlimited"}]'