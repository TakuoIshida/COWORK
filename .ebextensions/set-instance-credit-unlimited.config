commands:
  upgrade-aws-cli:
    command: |
      pip install awscli --upgrade --user
  set-instance-credit-unlimited:
    command: |
      aws ec2 modify-instance-credit-specification --instance-type t2.small --region ap-southeast-1 --instance-credit-specification '[{"InstanceId": "i-0597f25a11f8bfac3" $(wget -q -O - http://169.254.169.254/latest/meta-data/instance-id)"i-0597f25a11f8bfac3","CpuCredits": "unlimited"}]'
  